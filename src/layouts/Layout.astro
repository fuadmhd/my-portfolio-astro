---
import "./global.css";
import { Image } from "astro:assets";
import bg from "../assets/bg.jpg";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Fuad Mohammed</title>
	</head>
	<body class="scroll-smooth bg-primary-background/95 font-display relative min-h-screen">
		<Image
			src={bg}
			alt="bg"
			class="fixed inset-0 w-full h-full object-cover -z-10 opacity-[0.07]"
		/>
		<div class="relative z-10">
			<slot />
		</div>
	</body>
</html>
