---
const navItems = [
  { name: 'Work', href: '#work' },
  { name: 'Projects', href: '#projects' },
  { name: 'Skills', href: '#skills' },
  { name: 'Contact', href: '#contact' }
]
---

<header class="sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-secondary-background/80 bg-secondary-background/95 border-b border-text-normal/10">
  <nav class="max-w-7xl mx-auto px-4 h-14 flex items-center justify-between">
    <a href="#" class="font-display text-text-highlight font-bold tracking-wide hover:text-text-accent/80 transition-colors">FM</a>
    <div class="hidden md:flex items-center gap-6">
      {navItems.map((item) => (
        <a href={item.href} class="text-sm tracking-wide text-text-highlight/80 hover:text-text-highlight transition-colors focus:outline-none focus:ring-2 focus:ring-text-accent/40 rounded px-1 py-1">
          {item.name}
        </a>
      ))}
      <a href="#contact" class="ml-2 inline-flex items-center gap-2 border border-text-normal/20 text-text-highlight rounded-lg px-3 py-1.5 hover:bg-text-highlight/10 focus:outline-none focus:ring-2 focus:ring-text-accent/40 transition-colors">
        Hire Me
      </a>
    </div>

    <div class="md:hidden">
      <details class="relative">
        <summary class="list-none cursor-pointer inline-flex items-center gap-2 text-text-highlight/80 hover:text-text-highlight focus:outline-none focus:ring-2 focus:ring-text-accent/40 rounded px-2 py-1">
          Menu
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M3 6h18M3 12h18M3 18h18"/></svg>
        </summary>
        <div class="absolute right-0 mt-2 w-44 bg-secondary-background rounded-lg shadow-lg ring-1 ring-text-normal/10 p-2">
          {navItems.map((item) => (
            <a href={item.href} class="block px-3 py-2 rounded text-sm text-text-highlight/80 hover:bg-text-highlight/10 hover:text-text-highlight">
              {item.name}
            </a>
          ))}
          <a href="#contact" class="block mt-1 px-3 py-2 rounded text-sm border border-text-normal/20 text-text-highlight hover:bg-text-highlight/10">Hire Me</a>
        </div>
      </details>
    </div>
  </nav>
</header>
