---
import { Image } from "astro:assets";
import heroImg from '../assets/port-3.jpg';
---



<section
  class=" w-full flex mt-10 sm:mt-20 items-center overflow-hidden relative "

>
  <div class="w-full z-10 max-w-7xl mx-auto px-4 flex flex-col lg:flex-row items-center justify-center gap-8">
    <div class="w-full flex-1 mx-auto items-center flex flex-col gap-8 justify-center">
   <div class="flex max-w-4xl px-4 py-2 rounded-lg items-center justify-center gap-4 sm:gap-6">
      {/* Avatar + text (side by side like social apps) */}
      <div class="avatar group relative w-24 h-24 sm:w-28 sm:h-28">
        <Image
          src={heroImg}
          alt="hero"
          class="w-full h-full object-cover rounded-full"
          width={400}
          height={400}
        />
        {/* Hover gold ring draw */}
        <svg class="pointer-events-none absolute inset-0 ring-svg" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid meet">
          <circle cx="50" cy="50" r="48" class="ring-circle" />
        </svg>
      </div>

      <div class="min-w-0">
        <p class="font-display text-4xl max-sm:text-2xl font-bold leading-[1.2] text-text-highlight truncate">
          Fuad Mohammed
        </p>
        <p class="font-display text-3xl max-sm:text-2xl leading-[1.2] font-bold text-text-accent/70 truncate">
          Full Stack Developer
        </p>
      </div>
    </div>

      <div class="space-y-4">

        <p class="font-display text-md max-w-2xl px-2 text-center md:text-xl text-text-highlight/70">
            TypeScript developer experienced in creating end-to-end solutions, from backend APIs to frontend interfaces.
        </p>
      </div>

      <div class="flex max-[430px]:flex-col gap-4 pt-4">
        <a href="#work" aria-label="Jump to Work section" class="group scroll-smooth">
          <button class="font-display font-semibold flex items-center gap-4 bg-secondary-background w-fit px-6 py-3 rounded-lg text-text-highlight hover:bg-text-highlight/10 hover:text-text-highlight/90 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-text-accent/40">
            <span>Check My Work</span>
            <svg
              width="16"
              height="16"
              viewBox="0 0 18 18"
              fill="currentColor"
              class="group-hover:translate-x-1 transition-transform duration-300"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10.7216 2.49713L10.125 1.90051L8.93176 3.09376L9.52838 3.69038L13.9942 8.15626H1.96875H1.125V9.84375H1.96875H13.9942L9.52838 14.3097L8.93176 14.9062L10.125 16.0995L10.7216 15.5028L16.429 9.79549C16.8684 9.35616 16.8684 8.64384 16.429 8.20451L10.7216 2.49713Z"
              ></path>
            </svg>
          </button>
        </a>

        <a href="#contact" aria-label="Jump to Contact section" class="group">
          <button class="font-display font-semibold flex items-center gap-4 bg-secondary-background w-fit px-6 py-3 rounded-lg text-text-highlight hover:bg-text-highlight/10 hover:text-text-highlight/90 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-text-accent/40">
            <span>Contact Me</span>
            <svg
              width="16"
              height="16"
              viewBox="0 0 18 18"
              fill="currentColor"
              class="group-hover:translate-x-1 transition-transform duration-300"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10.7216 2.49713L10.125 1.90051L8.93176 3.09376L9.52838 3.69038L13.9942 8.15626H1.96875H1.125V9.84375H1.96875H13.9942L9.52838 14.3097L8.93176 14.9062L10.125 16.0995L10.7216 15.5028L16.429 9.79549C16.8684 9.35616 16.8684 8.64384 16.429 8.20451L10.7216 2.49713Z"
              ></path>
            </svg>
          </button>
        </a>
      </div>
    </div>


  </div>
</section>

<style>
  .ring-svg { width: 100%; height: 100%; }
  .ring-circle {
    fill: none;
    stroke: #d4af37; /* gold */
    stroke-width: 4;
    stroke-linecap: round;
    stroke-dasharray: 301.592; /* ~2Ï€r with r=48 */
    stroke-dashoffset: 301.592;
    transition: stroke-dashoffset 1s ease;
    opacity: 0.9;
  }
  .avatar:hover .ring-circle { stroke-dashoffset: 0; }
</style>
